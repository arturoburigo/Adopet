generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ong {
  id       String @id @default(uuid())
  name     String
  email    String
  whatsapp String
  city     String
  uf       String @db.Char(2)
  address  String
  Pet      Pet[]

  @@unique([id, name])
}

enum PetSize {
  SMALL
  MEDIUM
  LARGE
}

model Pet {
  id        String  @id @default(uuid())
  name      String
  age       String
  specie    String
  breed     String
  size      PetSize
  about     String
  petImg    String
  microchip Boolean
  ong       Ong     @relation(fields: [ongId, ongName], references: [id, name])
  ongName   String
  ongId     String
}
