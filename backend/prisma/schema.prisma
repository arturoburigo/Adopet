generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  name       String
  email      String
  password   String
  created_at DateTime? @default(now())

  @@map("users")
}

model Pet {
  id         String    @id @default(uuid())
  name       String
  age        String
  breed      String
  size       String
  about      String
  petImg     String
  castrate   Boolean
  created_at DateTime? @default(now())

  @@map("pets")
}
