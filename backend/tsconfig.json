{
  "compilerOptions": {
    "target": "es2016", // Define a versão do JavaScript gerado
    "module": "commonjs", // Define o sistema de módulos
    "esModuleInterop": true, // Permite importar módulos CommonJS com compatibilidade
    "strict": true, // Habilita verificações estritas de tipo
    "skipLibCheck": true, // Ignora a verificação de tipos em arquivos de definição
    "forceConsistentCasingInFileNames": true, // Verifica o uso consistente de maiúsculas/minúsculas
    "outDir": "./dist", // Define a pasta onde os arquivos compilados serão salvos
    "rootDir": "./src" // Define a pasta de entrada principal dos arquivos TypeScript
  },
  "include": ["src"], // Inclui apenas arquivos dentro da pasta "src"
  "exclude": ["node_modules"] // Exclui a pasta "node_modules"
}